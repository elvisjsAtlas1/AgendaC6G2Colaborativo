<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/themes.xml -->
<resources>
    <!-- Tu tema base -->
    <style name="Theme.AgendaEncarta2004V3" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Tema personalizado oscuro para DatePickerDialog -->
    <style name="MyTimePickerDialogTheme" parent="android:Theme.Material.Dialog">
        <!-- Fondo negro + texto blanco -->
        <item name="android:background">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>

        <!-- Suele afectar botones/realce del reloj en varias OEMs -->
        <item name="android:colorAccent">@android:color/white</item>

        <!-- Aplica estilo al widget del time picker cuando lo soporte -->
        <item name="android:timePickerStyle">@style/MyTimePickerWidgetStyle</item>
    </style>

    <!-- Tema oscuro para DatePickerDialog -->
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


    <!-- Ajustes al widget del TimePicker (fallbacks) -->
    <style name="MyTimePickerWidgetStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>
